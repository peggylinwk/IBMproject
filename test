answer = 65
guess = None
guess_count = 0
guess_limit = 3
out_of_limit = False

while answer != guess and not(out_of_limit):
    guess_count += 1
    if guess_count <= guess_limit:
        guess = int(input("請輸入數字: "))
        if guess < answer:
            print("大一點")
        elif guess > answer:
            print("小一點")
    else:
        out_of_limit = True
        
if out_of_limit:
    print("抱歉你輸了")
else:
    print("答對了")
